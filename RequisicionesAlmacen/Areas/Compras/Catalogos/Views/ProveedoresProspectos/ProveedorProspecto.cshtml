<script>
    //Variables Globales
    var _listPaises = @Html.Raw(Json.Encode(Model.ListPaises));
    var _listEstados = @Html.Raw(Json.Encode(Model.ListEstados));
    var _listMunicipios = @Html.Raw(Json.Encode(Model.ListMunicipios));
</script>

